<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:id="@+id/weatherImg"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:id="@+id/fav_button"
        android:checked="false"
        android:button="@drawable/fav_selector"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tempView"
        android:textAlignment="center"
        android:textSize="32sp"
        android:textColor="#FFFFFF"
        android:layout_toLeftOf="@+id/meteoInfo"
        android:layout_alignTop="@+id/meteoInfo"
        android:layout_alignLeft="@+id/favorites"
        android:layout_alignStart="@+id/favorites"
        android:layout_alignBottom="@+id/meteoInfo" />

    <TextView
        android:layout_width="281dp"
        android:layout_height="186dp"
        android:id="@+id/meteoInfo"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/favorites"
        android:layout_alignRight="@+id/cities"
        android:layout_alignEnd="@+id/cities" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:id="@+id/textViewLastModified"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textColor="#FFFFFF"
        android:layout_centerVertical="true"
        android:layout_below="@+id/tempView"
        android:layout_alignLeft="@+id/tempView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/favoris_button"
        android:id="@+id/favorites"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="40dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/villes_button"
        android:id="@+id/cities"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="40dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/prevision_button"
        android:id="@+id/previsionButton"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp" />

</RelativeLayout>

