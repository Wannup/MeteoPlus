<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.erwan.meteoplus.MeteoPrevisionFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewDate"
        android:textColor="#FFFFFF"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:layout_width="174dp"
        android:layout_height="174dp"
        android:id="@+id/imageView"
        android:layout_below="@+id/textViewDate"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewTemperature"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewMin"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/imageView"
        android:layout_toRightOf="@+id/textViewTemperature"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="40dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewMax"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/textViewMin"
        android:layout_toRightOf="@+id/textViewTemperature"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="40dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewDateModif"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/textViewTemperature"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
